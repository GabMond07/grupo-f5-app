<header class="fixed w-full bg-black/80 backdrop-blur-sm z-50">
  <nav class="container mx-auto m-10 px-4 py-4 md:m-5 md:mx-auto lg:m-5 lg:mx-auto">
    <div class="flex items-center justify-between">
      <!-- Botón de menú móvil -->
      <button id="menuButton" class="bg-white rounded-full p-6 md:p-2 lg:hidden">
        <img src="./menu.svg" alt="Menu" class="w-16 h-16">
      </button>
      
      <!-- Logo -->
      <a href="/" id="F5" class="text-5xl font-bold text-white">
        F5
      </a>
      
      <!-- Menú de navegación para pantallas grandes -->
      <ul class="hidden lg:flex space-x-8 text-white text-2xl">
        <li><a href="#home" class="hover:text-gray-400 transition-colors">Home</a></li>
        <li><a href="#about" class="hover:text-gray-400 transition-colors">About</a></li>
        <li><a href="#music" class="hover:text-gray-400 transition-colors">Music</a></li>
        <li><a href="#events" class="hover:text-gray-400 transition-colors">Events</a></li>
      </ul>
    </div>
  </nav>
</header>

<!-- Menú móvil con animación -->
<div id="mobileMenu" class="fixed inset-0 bg-black/95 z-50 flex flex-col items-center justify-center text-white text-2xl transform -translate-y-full transition-transform duration-300 ease-in-out">
  <button id="closeButton" class="absolute top-14 left-32 bg-white rounded-full p-6 md:p-2 md:top-9 md:left-8">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16" fill="none" viewBox="0 0 24 24" stroke="black">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
  <div class="w-full max-w-md mx-auto px-6">
    <ul class="space-y-20 text-center">
      <li><a href="#home" class="block hover:text-gray-400 transition-colors py-3 text-6xl md:text-4xl">Home</a></li>
      <li><a href="#about" class="block hover:text-gray-400 transition-colors py-3 text-6xl md:text-4xl">About</a></li>
      <li><a href="#music" class="block hover:text-gray-400 transition-colors py-3 text-6xl md:text-4xl">Music</a></li>
      <li><a href="#events" class="block hover:text-gray-400 transition-colors py-3 text-6xl md:text-4xl">Events</a></li>
    </ul>
  </div>
</div>

<script>
  // JavaScript para controlar el menú móvil con animación
  document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.getElementById('menuButton');
    const closeButton = document.getElementById('closeButton');
    const mobileMenu = document.getElementById('mobileMenu');
    const mobileMenuLinks = mobileMenu.querySelectorAll('a');
    
    // Función para abrir el menú
    menuButton.addEventListener('click', function() {
      // Mostrar el menú (animación de arriba hacia abajo)
      mobileMenu.classList.remove('-translate-y-full');
      document.body.classList.add('overflow-hidden'); // Previene el scroll
    });
    
    // Función para cerrar el menú
    function closeMenu() {
      // Ocultar el menú (animación de abajo hacia arriba)
      mobileMenu.classList.add('-translate-y-full');
      
      // Esperar a que termine la animación antes de habilitar el scroll
      setTimeout(() => {
        document.body.classList.remove('overflow-hidden');
      }, 300); // Mismo tiempo que la duración de la transición
    }
    
    closeButton.addEventListener('click', closeMenu);
    
    // Cerrar el menú cuando se hace clic en un enlace
    mobileMenuLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });
  });
</script>