---
import Stars from "../components/Stars.astro";
---

<div class="grid grid-cols-5 grid-rows-5 gap-4">
  <div
    class="col-span-3 row-span-4 w-[750px] h-auto flex items-center justify-center"
  >
    <!-- <Stars class="hidden lg:block" /> -->
    <div class="flex flex-col text-center">
      <h1 class="text-8xl font-bold glow-effect">Grupo F5</h1>
      <p class="text-2xl p-5">
        💃 Grupo de música versátil 🕺<br />
        <span class="font-bold text-3xl"
          >¡Con más de 6 años de trayectoria!
        </span><br />
        Originarios de San Miguel Xoxtla, <br /> 📍Puebla, México
      </p>
      <p class="text-xl p-2">
        Contacto directo: <span class="font-bold">222 920 5162</span>
      </p>
    </div>
  </div>
  <div class="col-span-2 row-span-3 col-start-4">
    <div class="flex justify-center items-center h-[150px]">
      <img
        src="/Logo01.svg"
        alt="Logo del grupo F5"
        id="logo"
        class="w-auto h-[250px]"
      />
    </div>
  </div>
  <div
    class="col-span-3 col-start-1 row-start-5 w-[750px] h-auto flex items-center justify-center"
  >
    <div class="gap-4">
      <button
        class="bg-white text-black px-4 py-2 rounded-full font-bold text-xl
         hover:bg-black hover:text-white transition-all duration-300 border-2 border-white"
      >
        <a
          target="_blank"
          rel="noopener noreferrer"
          href="https://wa.me/522229205162?text=Hola!%0AEstoy%20interesado%20en%20su%20servicio."
        >
          Más información 📞</a
        >
      </button>
      <button
        class="bg-white text-black px-4 py-2 rounded-full font-bold text-xl
         hover:bg-black hover:text-white transition-all duration-300 border-2 border-white"
        id="confetti-button"
        >¡Celebra con nosotros! 🎉
      </button>
    </div>
  </div>
  <div
    id="container-redes"
    class="col-span-2 row-span-2 col-start-4 row-start-4 flex flex-col items-center justify-center"
  >
    <div class="flex gap-3">
      <a
        href="https://www.instagram.com/grupof_5/"
        target="_blank"
        rel="noopener noreferrer"
        class="transition-transform hover:scale-110"
      >
        <img
          src="./instagram.svg"
          alt="Instagram"
          class="w-8 h-8 md:w-10 md:h-10"
        />
      </a>
      <a
        href="https://www.facebook.com/profile.php?id=100057128656168"
        target="_blank"
        rel="noopener noreferrer"
        class="transition-transform hover:scale-110"
      >
        <img
          src="./Facebook.svg"
          alt="Facebook"
          class="w-8 h-8 md:w-10 md:h-10"
        />
      </a>
      <a
        href="https://wa.me/522229205162?text=Hola!%0AEstoy%20interesado%20en%20su%20servicio."
        target="_blank"
        rel="noopener noreferrer"
        class="transition-transform hover:scale-110"
      >
        <img
          src="./WhatsApp.svg"
          alt="chat on whatsapp"
          class="w-8 h-8 md:w-10 md:h-10"
        />
      </a>
    </div>
    <p class="text-xl p-2">@grupof_5</p>
  </div>
</div>

<script>
  const button = document.getElementById("confetti-button");
  button.addEventListener("click", () => {
    confetti({
      particleCount: 100,
      spread: 70,
      origin: { y: 0.6 },
    });
  });
</script>
